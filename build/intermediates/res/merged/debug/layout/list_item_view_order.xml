<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="2">
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >
    <ImageView
        android:id="@+id/imageViewMinus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical|bottom"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:clickable="true"
        android:src="@drawable/minus"/>
    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Qty"
        android:textColor="@color/DarkSlateGray"
        android:textSize="27sp"/>
    <ImageView
        android:id="@+id/imageViewPlus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:clickable="true"
        android:paddingTop="1dp"
        android:src="@drawable/plus"/>
        </LinearLayout>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >
    
        <ImageView
            android:id="@+id/imageViewblankleft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/blankleft"/>
    <TextView
        android:id="@+id/textViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:longClickable="true"
        android:text="Item"
        android:textColor="@color/firebrick"
        android:textSize="25sp"/>
    <ImageView
        android:id="@+id/imageViewblankright"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/blankright"/>
     </LinearLayout>
     
</LinearLayout>