<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mbizdev.kcsonsons.NewServer">

    <TextView
        android:id="@+id/textViewBlurb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
         android:gravity="center"
        android:textColor="@color/black"
         />

    <TextView
        android:id="@+id/textViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:textColor="@color/firebrick"
        />
    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingRight="1dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingLeft="2dp"
        android:paddingRight="3dp"
        android:textColor="@color/DimGray"
        />


    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:fillViewport="true"
        >
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:weightSum="4"
            >
        <TableRow
            android:id="@+id/tableRowPic"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">



            <ImageView

                android:id="@+id/imageViewServerPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>


            <TableRow
                android:id="@+id/tableRowPic1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
    <ImageView

        android:id="@+id/imageViewServerPic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </TableRow>

            <TableRow
                android:id="@+id/tableRowPic2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
    <ImageView

        android:id="@+id/imageViewServerPic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </TableRow>

            <TableRow
                android:id="@+id/tableRowPic3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView

                    android:id="@+id/imageViewServerPic3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>